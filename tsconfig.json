{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "es2016"],
    "jsx": "react-native",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["react", "react-native", "react-navigation", "react-navigation-stack"],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src",
    "declarations.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
